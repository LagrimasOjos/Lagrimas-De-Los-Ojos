<div class="container mt-5">
    <h1 class="text-center mb-4">
        <i class="bi bi-person-circle"></i> ¡Hola, <%= user.username %>!
    </h1>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <h3>Mi Perfil</h3>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= userData[0].username %></h5>
                    <p class="card-text">Correo electrónico: <%= userData[0].email %></p>
                    <p class="card-text">Numero de Telefono: <%= userData[0].phone %></p>
                    <p class="card-text">Rol: <%= userData[0].rol === 'admin' ? 'Administrador' : 'Usuario' %></p>
                    <p class="card-text">Fecha de creación: <%= userData[0].createdAt %></p>
                </div>
            </div>
        </div>