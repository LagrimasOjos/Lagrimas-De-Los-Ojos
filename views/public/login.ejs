
<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <!-- Título con icono -->
      <div class="text-center mt-5">
        <h1 class="display-4">
          <i class="bi bi-person-circle"></i> Login
        </h1>
        <p class="text-muted">Accede a tu cuenta</p>
      </div>

      <form action="/auth/login" class="needs-validation shadow p-4 rounded bg-light" method="post" novalidate>
        <!-- Campo Email -->
        <div class="mb-3">
          <label for="email" class="form-label">
            <i class="bi bi-envelope-fill text-primary"></i> Correo Electrónico
          </label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
            <input type="email" class="form-control" id="email" name="email" placeholder="Introduce tu email"
              required>
            <div class="invalid-feedback">Por favor, introduce un email válido.</div>
          </div>
        </div>

        <!-- Campo Contraseña -->
        <div class="mb-3">
          <label for="password" class="form-label">
            <i class="bi bi-lock-fill text-danger"></i> Contraseña
          </label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            <input type="password" class="form-control" id="password" name="password"
              placeholder="Introduce tu contraseña" minlength="8" required>
            <div class="invalid-feedback">Por favor, introduce una contraseña válida.</div>
          </div>
        </div>

        <!-- Botón Enviar -->
        <div class="d-grid">
          <button type="submit" id="enviar" class="btn btn-primary">
            <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
          </button>
        </div>

        <!-- Links adicionales -->
        <div class="text-center mt-3">
          <a href="/auth/forgot-password" class="text-decoration-none text-danger">
            <i class="bi bi-question-circle"></i> ¿Olvidaste tu contraseña?
          </a>
        </div>

        <hr>

        <div class="text-center">
          <p class="mb-0">¿No tienes una cuenta?
            <a href="/auth/register" class="text-decoration-none text-success fw-bold">
              <i class="bi bi-person-plus-fill"></i> Regístrate aquí
            </a>
          </p>
        </div>
      </form>
      
    </div>
  </div>
</div>
<script src="/js/loginValidate.js"></script>