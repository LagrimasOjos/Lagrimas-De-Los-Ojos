<div class="container d-flex justify-content-center align-items-center my-3">
    <div class="card p-4" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Restablecer Contraseña</h2>
        <form id="resetPasswordForm" action="/auth/reset-password" method="POST" >
            <div class="mb-3">
                <input type="hidden" name="jwt" value="<%= jwt %>">
                <label for="new-password" class="form-label">Nueva Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" id="new-password" name="password" required minlength="8" placeholder="Introduce nueva contraseña">
                </div>
            </div>

            <div class="mb-3">
                <label for="confirm-password" class="form-label">Confirmar Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" id="confirm-password" name="repassword" required placeholder="Confirma tu nueva contraseña">
                </div>

            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/resetPassword.js" />